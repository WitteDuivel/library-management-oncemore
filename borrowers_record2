    mycursor.execute("INSERT INTO borrowers_records (duedate) VALUES (duedatep)")
def borrowerstaffadd():
    Borrowers_IDp=int(input("ENTER YOUR BORROWERS_ID:- "))
    mycursor.execute("UPDATE borrowers_records SET Borrowers_ID = Borrowers_IDp")
    bookIDp=int(input("ENTER YOUR BOOK'S ID:- "))
    mycursor.execute("UPDATE borrowers_records SET book_ID = book_IDp")
    bktitlep=input("ENTER YOUR BOOK'S TITLE/NAME:- ")
    mycursor.execute("UPDATE borrowers_records SET bktitle= bktitlep")
    staffIDp=input("ENTER YOUR STUDENT_ID:- ")
    mycursor.execute("UPDATE borrowers_records SET staff_ID = staffIDp")
    stffnamep=input("ENTER YOUR FIRST NAME:- ")
    mycursor.execute("UPDATE borrowers_records SET stffname = stffnamep")
    releaseDatep=int(input("ENTER RELEASE DATE(MMDDYYYY):- "))
    mycursor.execute("UPDATE borrowers_records SET releaseDate = releaseDatep")
    duedatep=int(input("ENTER YOUR DUE DATE(MMDDYYYY):- "))
    mycursor.execute("UPDATE borrowers_records SET duedate = duedatep")
